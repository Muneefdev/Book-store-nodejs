<%- include("includes/header.ejs") -%>

<%- include("includes/navbar.ejs") -%>

<main>
   <div class="container">
      <div class="row mt-4">
         <div class="col-md-6">
            <img src="<%= book.imageUrl %>" alt="Book Cover" class="img-fluid mb-3">
         </div>
         <div class="col-md-6">
            <h2 class="fw-bold"><%= book.title %></h2>
            <p class="text-muted"><span class="fw-bold">Author:</span> <%= book.author %></p>
            <p class="text-muted"><span class="fw-bold">Category:</span> <%= book.category %></p>
            <p class="lead"><%= book.description %></p>
            <p class="h4">RM <%= book.price %></p>
         </div>
      </div>
      <div class="text-center">
         <button class="btn btn-success">Add to card</button>
         <a href="/books" class="btn btn-secondary">Previous page</a>
      </div>
      <% if (userId === book.userId) { %>
      <div class="text-center mt-2">
         <a href="/user/edit-book?bookId=<%= book.id %>" class="btn btn-danger">Edit Book</a>
      </div>
      <% } %>
   </div>
</main>

<%- include("includes/footer.ejs") -%>