<%- include("includes/header.ejs") -%>

<%- include("includes/navbar.ejs") -%>

<main class="container">
   <div class="p-5 mt-5">
      <div class="d-flex justify-content-center align-items-center flex-column">
         <h1 class="text-center display-2 fw-bold">Explore our books collection</h1>
         <p class="text-center lead text-light fw-lighter px-1 bg-primary">What are you planning to read?</p>
      </div>
   </div>
   <hr>

   <div>
      <div class="row">
         <% if (books.length === 0) { %>
         <div class=" col-lg-6 text-center mx-auto">
            <div class="alert alert-info fw-bold role=" alert">
               Sorry No Books Found!
            </div>
         </div>

         <% } %>
         <% books.forEach(book => { %>
         <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
            <div class="card">
               <img src="<%= book.imageUrl %>" class="card-img-top" alt="<%= book.title %>">
               <div class="card-body">
                  <h5 class="card-title"><%= book.title %></h5>
                  <h6 class="card-subtitle"><%= book.author %></h6>
                  <p class="card-subtitle mt-1"><%= book.category %></p>
                  <p class="card-text">RM <%= book.price %></p>
                  <a href="/books/<%= book.id %>" class="btn btn-primary">Details</a>
               </div>
            </div>
         </div>
         <% }) %>
      </div>
   </div>
</main>


<%- include("includes/footer.ejs") -%>